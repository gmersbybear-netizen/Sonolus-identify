<script>
// ===== CONTAS =====
var users = {
    "felipe": {
        password: "rush2026",
        link: "https://www.mediafire.com/file/gvsmglybjckpovp/%25E2%259C%25B6.scp/file"
    },
    "colab1": {
        password: "1234",
        link: "https://www.mediafire.com/file/gvsmglybjckpovp/%25E2%259C%25B6.scp/file"
    }
};

// ===== LOGIN =====
function login(event) {
    event.preventDefault(); // impede recarregar a p√°gina

    var u = document.getElementById("user").value;
    var p = document.getElementById("pass").value;

    if (users[u] && users[u].password === p) {
        document.getElementById("download").style.display = "block";
        document.getElementById("link").href = users[u].link;
        document.getElementById("error").innerText = "Access granted";
    } else {
        document.getElementById("error").innerText = "Access denied";
    }
}
</script>

